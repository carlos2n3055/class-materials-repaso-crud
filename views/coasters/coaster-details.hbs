<div class="container coasters-index">

  <h1 style="font-weight: 100">{{name}}</h1>

  <h4>Descripción</h4>
  <p>{{description}}</p>
  <p><strong>Longitud: </strong> {{length}}m | <strong>Inversiones: </strong> {{inversions}}</p>

  <hr>

  <h5>Sobre el parque</h5>
  <p><strong>Nombre</strong>: {{park.name}}</p>
  <p><strong>Descripción</strong>: {{park.description}}</p>

  <div class="row">
    <div class="col-6">
      <a href="/coasters/delete?id={{_id}}" class="btn btn-dark mx-1">Eliminar</a>
      <a href="/coasters/edit?id={{_id}}" class="btn btn-dark mx-1">Editar</a>
    </div>
    <div class="col-6">
      <a href="/coasters" class="btn btn-dark mx-1">Volver</a>
    </div>
  </div>

</div>